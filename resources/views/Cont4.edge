<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Lorem</title>

  <!-- Bootstrap core CSS -->
  {{style("css/bootstrap.css")}}
  {{style("https://getbootstrap.com/docs/4.1/examples/album/album.css")}}
  {{style("css/hoverEffect")}}
  {{style("css/fontawesome.all")}}
  <!-- Custom styles for this template -->
  <link href="album.css" rel="stylesheet">
</head>

<body>

<header>
  <div class="collapse bg-dark" id="navbarHeader">
    <div class="container">
      <div class="row">
        <div class="col-sm-8 col-md-7 py-4">
          <h4 class="text-white">About</h4>
          <p class="text-muted">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor
            incididunt ut labore et dolore magna aliqua.</p>
        </div>
        <div class="col-sm-4 offset-md-1 py-4">
          <h4 class="text-white">Contact</h4>
          <ul class="list-unstyled">
            <li><a href="#" class="text-white">Follow on Twitter</a></li>
            <li><a href="#" class="text-white">Like on Facebook</a></li>
            <li><a href="#" class="text-white">Email me</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="navbar navbar-dark bg-dark shadow-sm">
    <div class="container d-flex justify-content-between">
      <a href="#" class="navbar-brand d-flex align-items-center">
        <strong><i class="fa fa-film"></i> Lorem</strong>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarHeader"
              aria-controls="navbarHeader" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>
  </div>
</header>

<main role="main">
  <section class="jumbotron text-center">
    <div class="container">
      <!--<h1 class="jumbotron-heading">-->
        <!--Lorem ipsum</h1>-->
      <!--<p class="lead text-muted">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor-->
        <!--incididunt ut labore et dolore magna aliqua.</p>-->
      <!--<p>-->
        <!--<a href="#" class="btn btn-primary my-2">Lorem</a>-->
        <!--<a href="#" class="btn btn-secondary my-2">Ipsum</a>-->
      <!--</p>-->
      {{filmler.data[0].title}}
    </div>
  </section>


  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
        @each(film in filmler.data)
        <div class="col-md-3">
          <div class="card mb-3 shadow-sm">
            <div class="container1" style="min-height: 400px">
              <img class="image" src="{{film.afisurl}}">
              <div class="middle">
                <button type="button" class="btn btn-success">
                  <a href="#"><span style="color: white"><i class="fa fa-shopping-cart"></i> Satın Al</span></a></button>
              </div>
            </div>
            <div class="card-body" style="min-height: 300px">
              <div class="btn-group">
                <button type="button" class="btn btn-sm btn-info" style="width:50%">{{film.year}}</button>
                <button type="button" class="btn btn-sm btn-light" style="width:50%">{{film.imdbmid}}</button>
                <button type="button" class="btn btn-sm btn-info">{{film.runtime}}</button>
                <button type="button" class="btn btn-sm btn-light ">{{film.budget}}₺</button>
              </div>
              <br>
              <br>
              <p class="card-text">{{film.plot}}</p>
            </div>
          </div>
        </div>
        @endeach

      </div>
      <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
          @if(pageNum==1)
          <li class="page-item disabled">
            @else
          <li class="page-item">
            @endif
            <a class="page-link" href="?page={{pageNum-1}}">Previous</a>
          </li>
          @each(page in range(1, filmler.lastPage+1))
          @if(page==pageNum)
          <li class="page-item active"><a class="page-link" href="?page={{page}}">{{page}}</a></li>
          @else
          <li class="page-item"><a class="page-link" href="?page={{page}}">{{page}}</a></li>
          @endif
          @endeach
          @if(pageNum==filmler.lastPage)
          <li class="page-item disabled">
            @else
          <li class="page-item">
            @endif
            <a class="page-link" href="?page={{pageNum+1}}">Next</a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</main>

<footer class="text-muted">
  <div class="container">
    <p class="float-right">
      <a href="#">Back to top</a>
    </p>
    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore
      magna aliqua.</p>
  </div>
</footer>

